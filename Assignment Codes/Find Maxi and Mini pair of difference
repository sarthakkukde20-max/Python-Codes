arr = []
n = int(input("Enter number of elements: "))

for i in range(n):
    arr.append(int(input("Enter element: ")))

arr.sort()
min_diff = abs(arr[1] - arr[0])

for i in range(n - 1):
    diff = abs(arr[i+1] - arr[i])
    if diff < min_diff:
        min_diff = diff

print("Minimum difference:", min_diff)
